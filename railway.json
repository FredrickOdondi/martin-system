{
    "$schema": "https://railway.app/railway.schema.json",
    "services": {
        "backend": {
            "source": "backend",
            "build": {
                "builder": "DOCKERFILE",
                "dockerfilePath": "Dockerfile"
            },
            "deploy": {
                "numReplicas": 1,
                "restartPolicy": "ALWAYS",
                "startCommand": "/bin/sh -c \"uvicorn backend.app.main:app --host 0.0.0.0 --port ${PORT:-8000}\""
            }
        },
        "frontend": {
            "source": "frontend",
            "build": {
                "builder": "DOCKERFILE",
                "dockerfilePath": "Dockerfile",
                "target": "production"
            },
            "deploy": {
                "numReplicas": 1,
                "restartPolicy": "ALWAYS"
            }
        },
        "celery-worker": {
            "source": "backend",
            "build": {
                "builder": "DOCKERFILE",
                "dockerfilePath": "Dockerfile"
            },
            "deploy": {
                "numReplicas": 1,
                "restartPolicy": "ALWAYS",
                "startCommand": "celery -A backend.app.core.celery_app worker --loglevel=info"
            }
        },
        "celery-beat": {
            "source": "backend",
            "build": {
                "builder": "DOCKERFILE",
                "dockerfilePath": "Dockerfile"
            },
            "deploy": {
                "numReplicas": 1,
                "restartPolicy": "ALWAYS",
                "startCommand": "celery -A backend.app.core.celery_app beat --loglevel=info"
            }
        }
    }
}