APP_NAME=ECOWAS Summit TWG System
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# ----------------------------------
# Server Configuration
# ----------------------------------
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# ----------------------------------
# Database
# ----------------------------------
DATABASE_URL=postgresql://ecowas_user:change_this_password@localhost:5432/ecowas_summit_db
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ----------------------------------
# Redis
# ----------------------------------
REDIS_URL=redis://default:irhqoDCLjWWHuMJSYyXCYMLRyjcKFCMO@redis.railway.internal:6379
REDIS_HOST=redis.railway.internal
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=irhqoDCLjWWHuMJSYyXCYMLRyjcKFCMO
REDIS_MAX_CONNECTIONS=10
REDIS_MEMORY_TTL=86400

# ----------------------------------
# Security
# ----------------------------------
SECRET_KEY=your-secret-key-minimum-32-characters-long-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ----------------------------------
# LLM Configuration
# ----------------------------------
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ----------------------------------
# Vector Database (Pinecone)
# ----------------------------------
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=ecowas-summit-knowledge
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ----------------------------------
# Email Configuration
# ----------------------------------
EMAIL_PROVIDER=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=summit@ecowas.int
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=summit@ecowas.int
SMTP_FROM_NAME=ECOWAS Summit Secretariat
SMTP_USE_TLS=true

# Gmail API (if using Gmail API instead of SMTP)
GMAIL_CREDENTIALS_FILE=./credentials/gmail_credentials.json
GMAIL_TOKEN_FILE=./credentials/gmail_token.json

# ----------------------------------
# Calendar Configuration
# ----------------------------------
CALENDAR_PROVIDER=google
GOOGLE_CALENDAR_CREDENTIALS=./credentials/google_calendar_credentials.json
GOOGLE_CALENDAR_TOKEN=./credentials/google_calendar_token.json
GOOGLE_CALENDAR_ID=primary

# ----------------------------------
# File Storage
# ----------------------------------
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=./storage
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=ecowas-summit-documents

# ----------------------------------
# Celery (Background Tasks)
# ----------------------------------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false

# ----------------------------------
# Logging
# ----------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Sentry (Error Tracking)
SENTRY_DSN=

# ----------------------------------
# Feature Flags
# ----------------------------------
ENABLE_TRANSCRIPTION=false
ENABLE_EMAIL_AUTOMATION=true
ENABLE_CALENDAR_SYNC=true
ENABLE_PROJECT_SCORING=true

# ----------------------------------
# Rate Limiting
# ----------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ----------------------------------
# Agent Configuration
# ----------------------------------
AGENT_TIMEOUT_SECONDS=300
AGENT_MAX_ITERATIONS=10
AGENT_VERBOSE=true
AGENT_USE_REDIS_MEMORY=true
AGENT_MAX_HISTORY=10
SUPERVISOR_MAX_HISTORY=20

# ----------------------------------
# TWG Configuration
# ----------------------------------
DEFAULT_MEETING_DURATION_MINUTES=60
MEETING_REMINDER_HOURS=24
ACTION_ITEM_REMINDER_DAYS=3
