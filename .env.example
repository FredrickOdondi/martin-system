# ==================================
# ECOWAS Summit TWG Support System
# Environment Configuration Template
# ==================================

# ----------------------------------
# General Settings
# ----------------------------------
NODE_ENV=development
PYTHON_ENV=development
PROJECT_NAME=ECOWAS Summit TWG System
VERSION=0.1.0

# ----------------------------------
# Backend Settings
# ----------------------------------
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000

# ----------------------------------
# Frontend Settings
# ----------------------------------
FRONTEND_HOST=localhost
FRONTEND_PORT=5173
FRONTEND_URL=http://localhost:5173

# ----------------------------------
# Database Configuration
# ----------------------------------
POSTGRES_USER=ecowas_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=ecowas_summit_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://ecowas_user:change_this_password@localhost:5432/ecowas_summit_db

# ----------------------------------
# Redis Configuration
# ----------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# ----------------------------------
# Authentication & Security
# ----------------------------------
SECRET_KEY=your-secret-key-min-32-characters-long-change-this
JWT_SECRET_KEY=your-jwt-secret-key-min-32-characters-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------
# LLM Configuration
# ----------------------------------
# Choose your LLM provider: openai, anthropic, or azure
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (Alternative)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Azure OpenAI Configuration (Alternative)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ----------------------------------
# Vector Database (Pinecone)
# ----------------------------------
PINECONE_API_KEY=pcsk_7FC9Yc_EV7ZJ2pFq3VDbAQhhrXpYitwP9vDAQiGVNjJM1HnDPbXBNXC3DAe9FKca9LeBLQ
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=ecowas-summit-knowledge
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ----------------------------------
# Email Configuration
# ----------------------------------
# Email provider: smtp, gmail, sendgrid
EMAIL_PROVIDER=gmail

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=summit@ecowas.int
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=summit@ecowas.int
SMTP_FROM_NAME=ECOWAS Summit Secretariat
SMTP_USE_TLS=true

# Gmail API Configuration (Alternative)
GMAIL_CREDENTIALS_FILE=./credentials/gmail_credentials.json
GMAIL_TOKEN_FILE=./credentials/gmail_token.json

# SendGrid Configuration (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=summit@ecowas.int

# ----------------------------------
# Calendar Integration
# ----------------------------------
# Calendar provider: google, microsoft, both
CALENDAR_PROVIDER=google

# Google Calendar API
GOOGLE_CALENDAR_CREDENTIALS=./credentials/google_calendar_credentials.json
GOOGLE_CALENDAR_TOKEN=./credentials/google_calendar_token.json
GOOGLE_CALENDAR_ID=primary

# Microsoft Calendar API
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id

# ----------------------------------
# File Storage
# ----------------------------------
# Storage provider: local, s3, azure_blob
STORAGE_PROVIDER=local

# Local Storage
LOCAL_STORAGE_PATH=./storage

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ecowas-summit-documents

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_STORAGE_CONTAINER=ecowas-summit-documents

# ----------------------------------
# Transcription Service (Optional)
# ----------------------------------
# Provider: whisper_api, azure_speech, google_speech
TRANSCRIPTION_PROVIDER=whisper_api

# OpenAI Whisper
WHISPER_API_KEY=your-openai-api-key

# Azure Speech Service
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-region

# Google Cloud Speech-to-Text
GOOGLE_SPEECH_CREDENTIALS=./credentials/google_speech_credentials.json

# ----------------------------------
# Logging & Monitoring
# ----------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
SENTRY_DSN=

# ----------------------------------
# Rate Limiting
# ----------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ----------------------------------
# CORS Settings
# ----------------------------------
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# ----------------------------------
# Task Scheduling
# ----------------------------------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ----------------------------------
# Feature Flags
# ----------------------------------
ENABLE_TRANSCRIPTION=false
ENABLE_PROJECT_SCORING=true
ENABLE_EMAIL_AUTOMATION=true
ENABLE_CALENDAR_SYNC=true

# ----------------------------------
# Development Settings
# ----------------------------------
DEBUG=true
RELOAD=true
